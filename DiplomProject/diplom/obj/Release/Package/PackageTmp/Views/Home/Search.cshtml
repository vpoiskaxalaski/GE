@model PagedList.IPagedList<diplom.Models.Post>
@using PagedList.Mvc;
@if (Model.Count == 0)
{
    <div align="center">
        <div class="view-header">
            <h1 class="view__title" style="margin:unset">
                По данному запросу ничего не найдено
            </h1>
        </div>
    </div>
}
else
{
    <div class="videos-inner">
        <div class="view-header">
            <div class="container">
                <h1 class="view__title">
                    Поиск
                </h1>
            </div>
        </div>
        <div class="F__category">
        </div>
        <div class="videos-mask">
            <div id="content">
                <ul class="videos-list vois">
                    @foreach (diplom.Models.Post post in Model)
                    {
                        <li class="voi">
                            <a href="Home/Post/@post.Id" title="@post.Name">
                                @*@Html.Raw("<img class='voi__poster' src=\"data:image/jpeg;base64," + Convert.ToBase64String(post.ImagesGallery.ToList()[0].ImageData) + "\" width='162' height='228' />")*@
                                <img class='voi__poster' src="@string.Concat("/Images/" + post.UserId + "/", post.ImagesGallery.ToList().First().Title, ".jpg")" width='162' height='228' />
                            </a>
                            <div class="voi__content">
                                <p class="voi__title">
                                    <a class="voi__title-link" href="Home/Post/@post.Id">
                                        @post.Name
                                    </a>
                                </p>
                                <p class="voi__info">
                                    @post.Subcategory.Points, @post.Subcategory.Name
                                </p>
                            </div>
                            <div class="overlay" original-title="">
                                <a class="overlay-link" href="/Home/Post/@post.Id"></a>
                            </div>

                        </li>
                    }
                </ul>
                <hr style="    color: #ddd;">
                @Html.PagedListPager(Model, page => Url.Action("Search", new { q = ViewBag.Q, page = page }), new PagedList.Mvc.PagedListRenderOptions { MaximumPageNumbersToDisplay = 10 })
            </div>
        </div>
    </div>
}



