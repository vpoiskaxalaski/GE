<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Swapp</title>
    <link rel="icon" type="image/png" href="~/Content/img/plus.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-sortable.css" rel="stylesheet" type="text/css">

    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/bootstrap-sortable.js"></script>

</head>
<body class="brand brand_embed">
    <script type="text/javascript">
        function getBon() {
            $.ajax({
                url: '/Manage/GetBonus',
                type: 'GET',
                success: function (result) {
                    $('#BonusValue').text(result);

                }
            });
            return false;
        }
        function enableFocus() {
            $('div.search-hint').addClass("focus");
        }
        function disableFocus() {
            $('div.search-hint').removeClass("focus");
        }
        $(function () {
            $.ajaxSetup({ cache: false });
            $("#serviceLoginLink").on("click", function (e) {
                $(e.target).closest('.btn-group').children('.dropdown-toggle').dropdown('toggle');
                $('#dialogContent').load(this.href, function () {
                    $('#modDialog').modal({
                        keyboard: true
                    }, 'show');
                    bindFormLogin(this);
                });
                return false;
            });
        });
        $(function () {
            $.ajaxSetup({ cache: false });
            $("#serviceRegisterLink").on("click", function (e) {
                $(e.target).closest('.btn-group').children('.dropdown-toggle').dropdown('toggle');
                $('#dialogContent').load(this.href, function () {
                    $('#modDialog').modal({
                        keyboard: true
                    }, 'show');
                    bindFormRegister(this);
                });
                return false;
            });
        });
        function bindFormLogin(dialog) {
            $('form', dialog).submit(function () {
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {
                            $('#modDialog').modal('hide');
                            location.reload();
                        } else {
                            $('#dialogContent').html(result);
                            bindForm();
                        }
                    }
                });
                return false;
            });
        }
        function bindFormRegister(dialog) {
            $('form', dialog).submit(function () {
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {
                            $('#modDialog').modal('hide');
                            location.reload();
                        } else {
                            $('#dialogContent').html(result);
                            bindForm();
                        }
                    }
                });
                return false;
            });
        }
    </script>
    <div id="wrapper" class="wrapper">
        <div id="header" class="header">
            @Html.Partial("_LoginPartial")
        </div>
        <div class="page">
            @RenderBody()
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="footer-item footer-item--left">
                    <div class="mU mU--color mU--footer">
                        <ul class="mU-list">
                            <li class="mU-item mU-item--main">
                                <a class="link mU-item-link" id="menuFooterMainLink" href="http://localhost:52723/">SWAPP</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="footer-item footer-item--right">
                    <div class="copyrightf">
                        2018 © SWAPP Все права защищены
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="modDialog" class="modal fade">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>
    <div id="modDialog1" class="modal fade">
        <div id="dialogContent1" class="modal-dialog"></div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
</body>
</html>
