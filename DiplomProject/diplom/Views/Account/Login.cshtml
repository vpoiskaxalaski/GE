@model diplom.Models.LoginViewModel
<div class="autH">
    <div class="modal-header">
        <h3 class="title">
            Вход
        </h3>
    </div>
    @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @class = "form", @style = "margin: 10px 40px;" }))
    {
        @Html.ValidationSummary(true, "", new { @style = "color:red;" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Логин" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:red;" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })
        </div>
        <div class="form-group">
            <button class="btn btn_color" type="submit">Войти</button>
        </div>
    }
    <div class="autH-another-action">
        @Html.ActionLink("Регистрация", "Register", "Account", null, new {@class=""})
        нового аккаунта
    </div>
</div>

